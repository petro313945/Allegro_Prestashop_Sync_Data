# ============================================
# Database Configuration (REQUIRED)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=db_allegro_prestashop_sync

# ============================================
# Admin User Configuration (REQUIRED)
# ============================================
# These credentials will be used to create the initial admin user
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=root

# ============================================
# Server Configuration (OPTIONAL)
# ============================================
PORT=3000                    # HTTP server port (default: 3000)
HTTPS_PORT=3300              # HTTPS server port (default: 3300)
NODE_ENV=development         # Environment: development or production

# ============================================
# Sync Configuration (OPTIONAL)
# ============================================
USE_INTERVAL_TIMER=true      # Use internal timer for sync (default: true)
SYNC_INTERVAL_MINUTES=3    # Sync interval in minutes (default: 7)
MAX_CONCURRENT_SYNCS=10      # Max concurrent syncs (default: 10)
SYNC_BATCH_SIZE=20           # Batch size for sync operations (default: 20)
SYNC_BATCH_DELAY_MS=100      # Delay between batches in milliseconds (default: 100)

# ============================================
# Database Connection Pool Configuration (OPTIONAL)
# ============================================
# Connection pool is automatically optimized based on expected concurrent users
# Formula: (expected users * connections per user) + buffer
EXPECTED_CONCURRENT_USERS=10 # Expected concurrent users (default: 10)
DB_CONNECTIONS_PER_USER=5    # Average connections per user (default: 5)
DB_CONNECTION_BUFFER=20      # Buffer connections for spikes (default: 20)
DB_CONNECTION_LIMIT=70       # Override: Direct connection limit (auto-calculated if not set, min: 10, max: 500)
DB_ACQUIRE_TIMEOUT=60000     # Connection acquisition timeout in ms (default: 60000)
DB_TIMEOUT=60000             # Query timeout in ms (default: 60000)
DB_QUEUE_LIMIT=0             # Max queued connection requests (0 = unlimited, default: 0)
DB_KEEPALIVE_DELAY=0         # Keep-alive initial delay in ms (default: 0)

# ============================================
# Security Configuration (OPTIONAL)
# ============================================
JWT_SECRET='STRONGSECRET['JWT':'QLWIK']' # Auto-generated if not provided (recommended: set a strong secret)
JWT_EXPIRES_IN=10000h           # JWT token expiration (default: 24h)
MAX_FAILED_LOGINS=5          # Max failed login attempts before lockout (default: 5)
LOGIN_LOCK_DURATION=60       # Login lockout duration in seconds (default: 60)

# ============================================
# SSL Configuration (OPTIONAL)
# ============================================
# For custom certificate paths (default: ssl/server.key and ssl/server.crt)
SSL_KEY_PATH=ssl/server.key
SSL_CERT_PATH=ssl/server.crt
FORCE_HTTPS=false            # Force HTTPS redirect (default: false)

# ============================================
# Allegro API Configuration (OPTIONAL)
# ============================================
ALLEGRO_API_URL=https://api.allegro.pl
ALLEGRO_AUTH_URL=https://allegro.pl/auth/oauth

# ============================================
# OAuth Configuration (OPTIONAL)
# ============================================
# OAuth Redirect URI - Must match Allegro Developer Portal exactly
OAUTH_REDIRECT_URI=http://146.19.170.131:3000/api/oauth/callback
OAUTH_SCOPE=                  # Optional: OAuth scopes (leave empty to use app defaults)
