# ============================================
# Database Configuration (REQUIRED)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=db_allegro_prestashop_sync

# ============================================
# Admin User Configuration (REQUIRED)
# ============================================
# These credentials will be used to create the initial admin user
# The admin user will be created automatically when you start the server
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=root

# ============================================
# Server Configuration (Optional)
# ============================================
PORT=3000
HTTPS_PORT=3300
USE_INTERVAL_TIMER=true

# ============================================
# JWT Secret (RECOMMENDED for Production)
# ============================================
# WARNING: If not set, a random secret will be generated on each server restart
# This means users will be logged out every time the server restarts
# Set a fixed secret for production use
JWT_SECRET='STRONGSECRET['JWT':'QLWIK']'

# ============================================
# Allegro API Configuration (Optional)
# ============================================
# Defaults to production Allegro API
ALLEGRO_API_URL=https://api.allegro.pl
ALLEGRO_AUTH_URL=https://allegro.pl/auth/oauth

# ============================================
# OAuth Configuration (Optional)
# ============================================
OAUTH_REDIRECT_URI=http://54.79.232.201:3000/api/oauth/callback
OAUTH_SCOPE=

# ============================================
# Sync Configuration (Optional)
# ============================================
MAX_CONCURRENT_SYNCS=15
SYNC_BATCH_SIZE=25
SYNC_BATCH_DELAY_MS=100

# Recommended settings for 50+ users
# DB_CONNECTION_LIMIT=100
# MAX_CONCURRENT_SYNCS=10
# SYNC_BATCH_SIZE=20
# SYNC_BATCH_DELAY_MS=100

# For 100+ users, consider:
# DB_CONNECTION_LIMIT=200
# MAX_CONCURRENT_SYNCS=15
# SYNC_BATCH_SIZE=25

# ============================================
# SSL Certificate Generation (Optional)
# ============================================
# Only needed if you want to include specific IPs in SSL certificates
# Leave empty to only include localhost
PUBLIC_IP=
LOCAL_IP=

# ============================================
# HTTPS Configuration (Optional)
# ============================================
SSL_KEY_PATH=ssl/server.key
SSL_CERT_PATH=ssl/server.crt
FORCE_HTTPS=false

# ============================================
# Database Connection Pool (Optional)
# ============================================
DB_CONNECTION_LIMIT=200

# ============================================
# Environment
# ============================================
NODE_ENV=development
